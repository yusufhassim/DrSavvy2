    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Scripts/bootstrap.js")

    <title>@ViewBag.Title</title>

 

    <!-- Bootstrap CSS CDN -->
