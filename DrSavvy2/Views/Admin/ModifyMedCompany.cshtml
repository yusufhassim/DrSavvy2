
@{
    ViewBag.Title = "Modify Medical Aid Company Details";
}

<h2>Modify Medical Aid Company Details</h2>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6">
            <div>
                <label>Company Name:</label>
                <input type="text" class="form-control" id="FirstName" placeholder="Discovery">
            </div>
            <div>
                <label>Contact Name:</label>
                <input type="text" class="form-control" id="Surname" placeholder="Dean Van Tonder">
            </div>

        </div>
        <div class="col-sm-6">
            <div>
                <label>Contact Number:</label>
                <input type="text" class="form-control" id="Surname" placeholder="084 545 8477">
            </div>
        </div>
    </div>
    <hr />
    <button type="button" class="btn btn-success"><i class="fas fa-plus"></i> Modify</button>
    <button type="button" class="btn btn-danger"><i class="fas fa-user-slash"></i> Discard</button>
</div>

