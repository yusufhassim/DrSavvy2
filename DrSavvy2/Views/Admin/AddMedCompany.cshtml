
@{
    ViewBag.Title = "Add New Medical Aid Company";
}

<h2>Add New Medical Aid Company</h2>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6">
            <div>
                <label>Company Name:</label>
                <input type="text" class="form-control" id="FirstName" placeholder="Company Name...">
            </div>
            <div>
                <label>Contact Name:</label>
                <input type="text" class="form-control" id="Surname" placeholder="Contact Name...">
            </div>

        </div>
        <div class="col-sm-6">
            <div>
                <label>Contact Number:</label>
                <input type="text" class="form-control" id="Surname" placeholder="XXX XXX XXXX">
            </div>
        </div>
    </div>
    <hr />
    <button type="button" class="btn btn-success"><i class="fas fa-plus"></i> Add</button>
    <button type="button" class="btn btn-danger"><i class="fas fa-user-slash"></i> Discard</button>
</div>
