
@{
    ViewBag.Title = "Register New Employee";
}

<h2>Register New Employee</h2>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6">
            <div>
                <label>First Name:</label>
                <input type="text" class="form-control" id="FirstName" placeholder="First Name">
            </div>
            <div>
                <label>Surname:</label>
                <input type="text" class="form-control" id="Surname" placeholder="Surname">
            </div>
            <div>
                <label>Cellphone Number:</label>
                <input type="tel" class="form-control" id="Celephone" placeholder="Cellphone Number">
            </div>
            <div>
                <label>Telephone Number:</label>
                <input type="tel" class="form-control" id="Telephone" placeholder="Telephone Number">
            </div>
            <div>
                <label>Email Address:</label>
                <input type="email" class="form-control" id="Email" placeholder="Email Address">
            </div>
            <div>
                <label>ID Number:</label>
                <input type="tel" class="form-control" id="IDNo" placeholder="ID Number">
            </div>
        </div>
        <div class="col-sm-6">
            <div>
                <div>
                    <label>Postal Address:</label>
                    <textarea class="form-control" id="PostalAdd" rows="1" placeholder="Postal Address"></textarea>
                </div>
                <div>
                    <label>House Address:</label>
                    <textarea class="form-control" id="HouseAdd" rows="1" placeholder="House Address"></textarea>
                </div>
                <div class="form-group">
                    <label>Employee Role:</label>
                    <br />
                    <select class="custom-select">
                        <option selected="">Select Employee Role</option>
                        <option value="1">Doctor</option>
                        <option value="2">Receptionist</option>
                        <option value="3">Bookkeeper</option>
                    </select>
                </div>
                <div>
                    <label>UserName:</label>
                    <input type="text" class="form-control" id="UserName" placeholder="UserName">
                </div>
                <div>
                    <label>Password:</label>
                    <div class="input-group">
                        <input type="password" class="form-control pwd" placeholder="Enter Password">
                        <span class="input-group-btn">
                            <button class="btn btn-default reveal" type="button" style="background-color:dodgerblue;"><i id="pass-status" class="fa fa-eye" aria-hidden="true"></i></button>
                        </span>
                    </div>
                </div>
                <div>
                    <label>Re-enter Password:</label>
                    <div class="input-group">
                        <input type="password" class="form-control pwd" placeholder="Re-enter Password">
                        <span class="input-group-btn">
                            <button class="btn btn-default reveal" type="button" style="background-color:dodgerblue;"><i id="pass-status" class="fa fa-eye" aria-hidden="true"></i></button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <button type="button" class="btn btn-success"><i class="fas fa-check-double"></i> Register</button>
    <button type="button" class="btn btn-danger"><i class="fas fa-user-slash"></i> Discard</button>
</div>

