
@{
    ViewBag.Title = "Update Ailment Details";
}

<h2>Update Ailment Details</h2>

<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6">
            <div>
                <label>Name:</label>
                <input type="text" class="form-control" id="Name" placeholder="Depression">
            </div>
            <div class="form-group">
                <label>Ailment Type:</label>
                <select class="custom-select">
                    <option selected="">Physical Ailment</option>
                    <option value="1">Headache</option>
                    <option value="2">Physical Ailment</option>
                    <option value="3">Financial Control</option>
                </select>
            </div>

        </div>
        <div class="col-sm-6">
            <div>
                <label>Description:</label>
                <textarea class="form-control" id="AilDesc" rows="3" placeholder="A mental health disorder characterised by persistently depressed mood or loss of interest in activities, causing significant impairment in daily life."></textarea>
            </div>

        </div>
    </div>
    <hr />
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#Modify"><i class="fas fa-plus"></i> Modify</button>
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Discard"><i class="fas fa-user-slash"></i> Discard</button>
</div>

<!--Confirm discard Modal-->
<div class="modal fade" id="Discard" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Discard Ailment?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel updating the details?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Confirm</button>
            </div>
        </div>
    </div>
</div>

<!--Confirm Modify Modal-->
<div class="modal fade" id="Modify" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modify Ailment </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to modify the ailment details?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Confirm</button>
            </div>
        </div>
    </div>
</div>