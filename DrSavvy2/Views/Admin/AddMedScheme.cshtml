
@{
    ViewBag.Title = "Add New Medical Aid Scheme";
}

<h2>Add New Medical Aid Scheme</h2>

<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6">
            <div>
                <label>Scheme Name:</label>
                <input type="text" class="form-control" id="FirstName" placeholder="Name..">
            </div>
            <div>
                <label>Scheme Description:</label>
                <textarea type="text" class="form-control" id="FirstName" placeholder="Description"></textarea>
            </div>

        </div>
        <div class="col-sm-6">
            <div>

                <div class="form-group">
                    <label>Medical Aid Company:</label>
                    <select class="custom-select">
                        <option selected="">Select</option>
                        <option value="1">Discovery</option>
                        <option value="2">Receptionist</option>
                        <option value="3">Bookkeeper</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <button type="button" class="btn btn-success"><i class="fas fa-plus"></i> Add</button>
    <button type="button" class="btn btn-danger"><i class="fas fa-user-slash"></i> Discard</button>

</div>