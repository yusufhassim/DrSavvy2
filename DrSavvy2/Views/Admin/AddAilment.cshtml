
@{
    ViewBag.Title = "Add New Ailment";
}

<h2>Add New Ailment</h2>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6">
            <div>
                <label>Name:</label>
                <input type="text" class="form-control" id="Name" placeholder="Name">
            </div>
            <div class="form-group">
                <label>Ailment Type:</label>
                <br />
                <select class="custom-select">
                    <option selected="">Select Ailment Type</option>
                    <option value="1">Headache</option>
                    <option value="2">Physical Ailment</option>
                    <option value="3">Financial Control</option>
                </select>
            </div>

        </div>
        <div class="col-sm-6">
            <div>
                <label>Description:</label>
                <textarea class="form-control" id="AilDesc" rows="3" placeholder="Ailment Description"></textarea>
            </div>

        </div>
    </div>
    <hr />
    <button type="button" class="btn btn-success"><i class="fas fa-plus"></i> Add</button>
    <button type="button" class="btn btn-danger"><i class="fas fa-user-slash"></i> Discard</button>
</div>


