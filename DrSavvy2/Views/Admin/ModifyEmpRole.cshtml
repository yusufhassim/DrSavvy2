
@{
    ViewBag.Title = "Modify Employee Role Details";
}

<h2>Modify Employee Role Details</h2>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6">
            <div>
                <label>Role Description:</label>
                <input type="text" class="form-control" id="RoleDesc" placeholder="Doctor">
            </div>

        </div>
        <div class="col-sm-6">

            <div class="form-group">
                <label>Employee Role:</label>
                <select class="custom-select">
                    <option selected="">Full Control</option>
                    <option value="1">Full Control</option>
                    <option value="2">Mandatory Control</option>
                    <option value="3">Financial Control</option>
                </select>
            </div>
        </div>
    </div>
</div>
<hr />
<button type="button" class="btn btn-success"><i class="fas fa-plus"></i> Modify</button>
<button type="button" class="btn btn-danger"><i class="fas fa-user-slash"></i> Discard</button>

