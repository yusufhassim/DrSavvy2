
@{
    ViewBag.Title = "X-ray Type List";
}

<h2>X-ray Type List</h2>
<hr />

<button type="button" class="btn btn-primary">Add New X-ray Type</button>
<hr />
<div class="input-group md-form form-sm form-1 pl-0">
    <div class="input-group-prepend" style="color:dodgerblue;">
        <span class="input-group-text" id="basic-text1" style="background-color:dodgerblue;">
            <i class="fas fa-search text-white"
               aria-hidden="true"></i>
        </span>
    </div>
    <input type="text" class="form-control border-bottom" placeholder="Search here..." aria-label="Recipient's username" aria-describedby="button-addon2">
</div>
<br />
<div>
    <table class="table-active table table-hover" style="border-radius: 25px;">
        <thead>
            <tr>
                <th scope="col">Scheme Name</th>
                <th scope="col">Scheme Description</th>
                <th scope="col">Medical Aid Company</th>
                <th scope="col">Modify</th>
                <th scope="col">Remove</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Executive Plan</td>
                <td>Unlimited cover in any private hospital, including private ward cover</td>
                <td>Discovery</td>
                <td>
                    <a><i class="fas fa-user-edit fa-lg"></i></a>
                </td>
                <td>
                    <a><i class="far fa-trash-alt fa-lg"></i></a>
                </td>
            </tr>
            <tr>
                <td>Maxima Plus</td>
                <td>ultimate in peace-of-mind cover</td>
                <td>Fedhealth</td>
                <td>
                    <a><i class="fas fa-user-edit fa-lg"></i></a>
                </td>
                <td>
                    <a ><i class="far fa-trash-alt fa-lg" data-toggle="modal" data-target="#Delete"></i></a>
                </td>
            </tr>

        </tbody>
    </table>
</div>

<!--Confirm Delete Modal-->
<div class="modal fade" id="Delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete X-ray Type?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to permanently delete this X-ray type?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Confirm</button>
      </div>
    </div>
  </div>
</div>